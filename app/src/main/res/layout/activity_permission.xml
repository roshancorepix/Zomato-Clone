<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.PermissionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_location_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/location_find" />

        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_location_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/tv_nice_to_meet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="@string/hi_nice_to_meet_you"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nice_to_meet"
                android:layout_marginStart="@dimen/margin_45"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_50"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="@string/set_your_location_to_start_exploring_restaurants_around_you"
                android:textColor="@color/darkGrayFont"
                android:textSize="@dimen/size_15" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/btn_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_text"
            android:layout_marginTop="@dimen/margin_30">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:indeterminateTint="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_current_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/button_drawable"
                android:text="@string/use_current_location"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/set_your_location_manually"
            android:textColor="@drawable/text_color"
            android:textSize="@dimen/size_18"
            android:fontFamily="@font/kumbh_sans_regular"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_14"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/darkGrayFont"
            android:fontFamily="@font/kumbh_sans_regular"
            android:layout_marginLeft="@dimen/margin_32"
            android:layout_marginRight="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_40"
            android:text="@string/we_only_access_your_location_while_you_are_using_the_app_to_improve_your_experience"/>
    </RelativeLayout>

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/darkGrayBackground"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="668dp"
        android:layout_gravity="bottom|center"
        android:background="@color/white"
        android:clipToPadding="true"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="100dp"
        style="@style/DialogStyle"
        app:layout_behavior=".Comman.LockableBottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="@string/search_location"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_18"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/iv_close_bottom_sheet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_cancel"
                app:tint="@color/darkGrayFont" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_5"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/search_icon"
                    android:padding="@dimen/padding_12"
                    android:src="@drawable/ic_search" />

                <AutoCompleteTextView
                    android:id="@+id/search_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/search_icon"
                    android:layout_toStartOf="@id/text_cancel_button"
                    android:background="@null"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:hint="@string/search_for_your_location"
                    android:textColorHint="@color/lightDarkGray"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_15"/>

                <ImageView
                    android:id="@+id/text_cancel_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:padding="@dimen/padding_5"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_12"
                    android:src="@drawable/ic_cancel"
                    app:tint="@color/darkGrayFont"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rl_use_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="-4dp"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/iv_location_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_target" />

            <TextView
                android:id="@+id/tv_current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_location_img"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="@string/use_current_location"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_18" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/border_stroke_color"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            />

        <ProgressBar
            android:id="@+id/bottom_sheet_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="@color/colorPrimary"
            android:background="@drawable/circle_progress_foreground"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>